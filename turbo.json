{
  "$schema": "https://turbo.build/schema.json",
  "ui": "tui",
  "tasks": {
    "dev": {
      "cache": false,
      "persistent": true
    },
    "build": {
      "dependsOn": ["^build"],
      "outputs": ["dist/**", "build/**", "coverage/**"]
    },
    "typecheck": {
      "dependsOn": ["^build", "^typecheck"]
    },
    "lint": {
      "dependsOn": ["^lint"]
    },
    "test": {
      "dependsOn": ["^build", "^test"]
    },
    "format": {
      "cache": false
    },
    "format:check": {
      "cache": false
    }
  }
}
